
<div class="blue-background d-flex align-items-center justify-content-center">
  <h1>Your cocktail club</h1>
</div>

<div class="container">
    <h2 class="text-center mt-5">Liste des cocktails</h2>
    <div class="row justify-content-center mt-5 mb-5">
      <% @cocktails.each do |cocktail| %>
        <div class="col-10 col-lg-4">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')" >

            <div>
              <button id="sweet-alert-demo" class="delete-btn"><i class="fas fa-times"></i></button>
              <%= link_to "", cocktail_path(cocktail), method: :delete, id: "delete-link", class: "hidden" %>
            </div>

              <%=link_to cocktail_path(cocktail) do %>
              <%= cocktail.name %>
              <% end %>
          </div>
        </div>
      <% end %>
    </div>
</div>


