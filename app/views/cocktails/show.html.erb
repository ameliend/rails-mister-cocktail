<div class="white-background">

  <div class="show-banner margin-banner" style=" background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>')">
    <div class="show-header">
      <h2> <%= @cocktail.name %> </h2>
    </div>
      <button id="sweet-alert-demo" class="btn rounded-circle"><i class="far fa-trash-alt"></i></button>
      <%= link_to "", cocktail_path(@cocktail), method: :delete, class: "delete-link hidden" %>
  </div>

  <div class="container">
    <div class="row mt-5 justify-content-center">
      <div class="col-4 content-show-card">
          <h3 class="mb-5">Doses</h3>
          <ul>
            <% @cocktail.doses.each do |dose| %>
              <li> <%= dose.description %>
                <%= dose.ingredient.name %>
                <%= link_to cocktail_dose_path(@cocktail, dose), method: :delete  do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
              </li>
            <% end %>
          </ul>
      </div>
    </div>

    <div class="row mt-5 justify-content-center">
      <div class="col-4 content-show-card">
        <%= render 'doses/new', cocktail: @cocktail, dose:@dose %>
      </div>
    </div>

    <div class="row mt-5 review-card">
      <div class="col-12">
        <h2> Reviews </h2>
        <ul>
          <% @cocktail.reviews.each do |review| %>
            <li class="list-group-item"><%= review.description %></li>
          <% end %>
        </ul>
        <div>
          <%= render 'reviews/new', cocktail: @cocktail, review:@review %>
        </div>
      </div>
    </div>
  </div>
</div>

